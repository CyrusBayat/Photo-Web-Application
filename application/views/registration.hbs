

<div class="container"  onsubmit="return(Form_VAlidation());">
    <form name="register" 
    method="POST" action="./users/register"
    enctype="application/x-www-form-urlencoded" >
        <fieldset>
            <legend>New User Information</legend>
            <label id="username">User Name</label>
            <input id="text" placeholder="User Name" name="username" required />

            <label id="email">Email</label>
            <input id="text" placeholder="Email" name="email" required />

        </fieldset>
        <fieldset>
            <label id="password">Password</label>
            <input id="password" placeholder="password" name="password" required />


            <label id="confirmPassword">Confirm Password</label>
            <input id="confirmPassword" placeholder="Confirm Password" name="confirmPassword" required="true">

        </fieldset>
        <fieldset>

            <input type="checkbox" id="age" name="age" value="age" required="true">
            <label for="age">I am 13 year of age or older</label>

        </fieldset>
        <fieldset>

            <input type="checkbox" id="tos" name="tos" value="TOS and privacy rules" required>
            <label for="tos"> I accept the</label>
            <a href="https://www.google.com/search?client=firefox-b-1-d&q=privacy">Privacy Rules</a>
        </fieldset>
        <input type="submit" name="submit" value="Submit" />

    </form>

</div>


  

